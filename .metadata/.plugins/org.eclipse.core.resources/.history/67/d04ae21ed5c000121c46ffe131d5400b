package com.LHSP.FragmentSMS;

import java.util.ArrayList;
import java.util.List;

import android.util.Log;

public class SMSList {
	List<Tuple<Integer, ArrayList<SMS>>> smsByPerson = new ArrayList<Tuple<Integer, ArrayList<SMS>>>();

	public boolean add(SMS sms)
	{
		int personId = sms.getPerson();
		Tuple<Integer, ArrayList<SMS>> t = null;
		for (Tuple<Integer, ArrayList<SMS>> tuple : smsByPerson) {
			if(tuple.x == personId)
			{
				t = tuple;
				break;
			}
		}
		if(t != null)
			t.y.add(sms);
		else
		{
			ArrayList<SMS> newSMSList = new ArrayList<SMS>();
			newSMSList.add(sms);
			smsByPerson.add(new Tuple<Integer, ArrayList<SMS>>(personId, newSMSList));
		}
		return true;
	}

	public int size()
	{
		return smsByPerson.size();
	}

	public ArrayList<SMS> get(MESSAGEGETTYPE getType, int id)
	{
		switch (getType) {
		case SEQUENCE:
			return smsByPerson.get(id).y;
			
		case PERSONID:
			for (Tuple<Integer, ArrayList<SMS>> tuple : smsByPerson) {
				if(tuple.x == id)
					return tuple.y;
			}
			return null;

		default:
return null;
		}

	}
}
