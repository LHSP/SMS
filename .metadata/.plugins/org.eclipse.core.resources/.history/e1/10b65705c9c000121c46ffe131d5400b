package com.LHSP.FragmentSMS;

import java.util.ArrayList;
import java.util.List;

public class SMSList {
	List<Tuple<Integer, List<SMS>>> smsByPerson = new ArrayList<Tuple<Integer,List<SMS>>>();
	
	public void Add(SMS sms)
	{
		int personId = sms.getPerson();
		for (Tuple<Integer, List<SMS>> tuple : smsByPerson) {
			if(tuple.x == personId)
				tuple.y.add(sms);
			else
				smsByPerson.add(new Tuple<Integer, List<SMS>>(personId, sms));
		}
	}
}
